{% import '@CoreVisualizations/macros.twig' as macros %}

<div piwik-content-block>
    {% if not isWidget %}
    <div class="row">
        <div class="col m6">
    {% endif %}

            {% for key, sparkline in sparklines %}
                {% if key is even %}
                    {{ macros.singleSparkline(sparkline) }}
                {% endif %}
            {% endfor %}

    {% if not isWidget %}
            <br style="clear:left"/>
        </div>
        <div class="col m6">
    {% endif %}

            {% for key, sparkline in sparklines %}
                {% if key is odd %}
                    {{ macros.singleSparkline(sparkline) }}
                {% endif %}
            {% endfor %}

            <br style="clear:left"/>

    {% if not isWidget %}
        </div>
    </div>
    {% endif %}

    {% include "_sparklineFooter.twig" %}
</div>
